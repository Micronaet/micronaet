<?xml version="1.0"?>
<openerp>
  <data>
    <!--chemical.attach.manual.form.wizard-->
    <record id="view_chemical_attach_manual_form_form" model="ir.ui.view">
        <field name="name">chemical.attach.manual.form.wizard.form</field>
        <field name="model">chemical.attach.manual.form.wizard</field>
        <field name="arch" type="xml">
            <form string="Allega wizard" version="7.0">
                <header>
                      <button string='Importa' name='add_attachment' type='object' icon='gtk-execute'/>
                      <button string="Cancel" special="cancel" icon='STOCK_CANCEL'/>
                </header>
                <sheet>
                   <group colspan="4" col="4">
                      <field name="form_id" readonly="1"/>
                      <field name="attachment_id" readonly="1" attrs="{'invisible': [('attachment_id', '=', False)]}"/>
                      <field name="name" colspan="4" attrs="{'invisible': [('attachment_id', '!=', False)], 'required': [('attachment_id', '=', False)]}"/>
                      <field name="file" colspan="4"/>
                   </group>
                </sheet>
                <footer></footer>
            </form>
        </field>
    </record>
    <record id="action_view_chemical_attach_manual_form" model="ir.actions.act_window">
            <field name="name">Import attachment report</field>
            <field name="res_model">chemical.attach.manual.form.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_chemical_attach_manual_form_form"/>
            <field name="target">new</field>
    </record>
  </data>
</openerp>
