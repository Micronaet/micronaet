<?xml version="1.0" ?>
<openerp>
	<data>
    <!-- Partner > Address 
          (inherit from base_contact view) -->
         
	<record model="ir.ui.view" id="view_partner_form_inherit_province">
		<field name="name">Add partner region province</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base_contact.view_partner_form_inherit"/>
		<field name="type">form</field>
		<field name="arch" type="xml">                  
           <xpath expr="/form/notebook/page[@string='General']/field[@name='address']/form/group/field[@name='city']" position="after">
               <field name="province" select="2" />
               <field name="region" select="2" />
		   </xpath>
           <xpath expr="/form/notebook/page[@string='General']/field[@name='address']/form/group/field[@name='city']" position="attributes">
                <attribute name='on_change'>on_change_city(city)</attribute>
		   </xpath>
           <xpath expr="/form/notebook/page[@string='General']/field[@name='address']/form/group/field[@name='zip']" position="attributes">
                <attribute name='on_change'>on_change_zip(zip)</attribute>
		   </xpath>
           <xpath expr="/form/notebook/page[@string='General']/field[@name='address']/form/group/field[@name='state_id']" position="replace">
               <!-- delete federal state -->
		   </xpath>
           <xpath expr="/form/notebook/page[@string='General']/field[@name='address']/form/group/field[@name='fax']" position="after">
               <field name="mobile" />
		   </xpath>
		</field>
	 </record>

     <!-- INHERIT Search res.partner-->      
     <!--TODO inserire nella res.partner un rimando alla regione / provincia per poter fare il filtro!!! -->
