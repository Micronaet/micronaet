<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <record id="product_custom_duty_update_wizard_form" model="ir.ui.view">
            <field name="name">Update custom duty</field>
            <field name="model">product.custom.duty.update.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Update custom duty">
                      <field name="update" />
                      <button string="Update" name="action_update" type="object" icon="gtk-ok" />
                      <button string="Close" special="cancel" icon="gtk-cancel" />
                </form>
            </field>
      </record>
      
    <record model="ir.actions.act_window" id="action_product_custom_duty_update_wizard">
        <field name="name">Update duty wizard</field>
        <field name="res_model">product.custom.duty.update.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_custom_duty_update_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>      
    
    <menuitem 
        parent="base_fiam_pricelist.product_custom_duty_action_menu" 
        id="product_custom_duty_update_wizard_menu" 
        action="action_product_custom_duty_update_wizard"/>
      
    </data>
</openerp>
