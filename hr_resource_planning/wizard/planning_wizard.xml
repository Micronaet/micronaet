    <data>
       <!--BLOCCO: hr.employee.resource.wizard: Prima videata dove si impostano i parametri -->
         <record model="ir.ui.view" id="hr_employee_planner_wizard">
            <field name="name">Resource Wizard</field>
            <field name="model">hr.employee.planner.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Verify planning resources">
                    <!--<field name="name" />-->
                    <group colspan="4">
                    <field name="from_date" widget="date"/>
                    <field name="to_date" widget="date" />
                    <newline />
                    <field name="department_id" />
                    <field name="treshold" />
                    </group>                    
                    <group colspan="4">
                    <button string="Cancel" special="cancel" icon="gtk-cancel"/>                    
                    <button name="open_calendar" string="Open" type="object" icon="gtk-go-forward" />
                    </group>
                </form>
            </field>
         </record>
        
        <act_window         
            src_model="hr.employee.planner"
            res_model="hr.employee.planner.wizard"
            name="Controllo copertura"
            view_mode="form"       
            target="current"     
            id="hr_employee_planner_wizard_action_right" />        
            
