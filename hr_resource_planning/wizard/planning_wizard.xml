       <!--BLOCCO: hr.employee.planner.result.wizard: Seconda videata con rappresentazione calendario -->
         <record model="ir.ui.view" id="hr_employee_planner_calendar_form">
            <field name="name">Planner Calendar Form</field>
            <field name="model">hr.employee.planner.calendar</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Planning resources">
                    <field name="name" />
                    <field name="date" />
                    <field name="duration" widget="float_time" />
                    <field name="total" />
                </form>
            </field>            
         </record>              

         <record model="ir.ui.view" id="hr_employee_planner_calendar_tree">
            <field name="name">Planner Calendar Tree</field>
            <field name="model">hr.employee.planner.calendar</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Planning resources">
                    <field name="name" />
                    <field name="date" />
                    <field name="duration" widget="float_time" />
                    <field name="total" />
                </tree>
            </field>            
         </record>              

         <record model="ir.ui.view" id="hr_employee_planner_calendar_calendar">
            <field name="name">Planner Calendar</field>
            <field name="model">hr.employee.planner.calendar</field>
            <field name="type">calendar</field>
            <field name="arch" type="xml">
                <calendar string="Planning resources" date_start="date" date_delay="duration" color="covered" mode="week">
                    <field name="total" />
                    <field name="name" />
                    <field name="duration" widget="float_time" />
                </calendar>
            </field>            
         </record>              

