<?xml version="1.0"?>
<openerp>
    <data>
        <!--product.product-->
        <record model="ir.ui.view" id="view_product_product_security_search">
            <field name="name">product.product.search</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <search string="Ricerca prodotti sicurezza" version="7.0">
                    <field name="default_code" />
                    <field name="name" />
                    <filter name="state_on" string="Sicurezza impostata" domain="[('security_template_id','!=',False)]"/>
                    <filter name="state_off" string="Sicurezza non impostata" domain="[('security_template_id','=',False)]"/>
                    <group expand="0" string="Group By...">
                        <filter name="group_state" string="Sicurezza" context="{'group_by': 'security_template_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_security_form">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <form string="Prodotti con modello sicurezza" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="default_code" readonly="1"/>
                            <field name="name" readonly="1" />

                            <field name="uom_id" readonly="1" />
                            <field name="security_off" />

                            <notebook colspan="4">
                                <page name="protection_page" string="Simboli">
                                    <group col="4">
                                        <field name="security_template_id" />

                                        <separator string="Simboli di sicurezza (interni)" colspan="4"/>
                                        <field name="symbol_ids" widget="many2many_tags" domain="[('mode', '=', 'danger'),('obsolete', '=', False)]" colspan="4"/>

                                        <separator string="Simboli di sicurezza (ADR)" colspan="4"/>
                                        <field name="adr_symbol_ids" widget="many2many_tags" domain="[('mode', '=', 'adr'),('obsolete', '=', False)]" colspan="4"/>

                                        <separator string="Simboli protezione" colspan="2"/>
                                        <separator string="Testi protezione" colspan="2"/>
                                        <field name="protection_eye_id" string="Occhi"/>
                                        <field name="protection_eye_text" nolabel="1" colspan="2"/>
                                        <field name="protection_skin_id" string="Pelle"/>
                                        <field name="protection_skin_text" nolabel="1" colspan="2"/>
                                        <field name="protection_hand_id" string="Mani"/>
                                        <field name="protection_hand_text" nolabel="1" colspan="2"/>
                                        <field name="protection_air_id" string="Vie respiratorie"/>
                                        <field name="protection_air_text" nolabel="1" colspan="2"/>
                                        <field name="protection_body_id" string="Tuta"/>
                                        <field name="protection_body_text" nolabel="1" colspan="2"/>
                                        <field name="protection_foot_id" string="Scarpe"/>
                                        <field name="protection_foot_text" nolabel="1" colspan="2"/>
                                    </group>
                                </page>
                                <page name="term_page" string="Termini">
                                    <group col="4">
                                        <field name="term_h_ids" widget="many2many_tags" colspan="4"/>
                                        <field name="term_p_ids" widget="many2many_tags" colspan="4"/>
                                        <field name="term_dpi_ids" widget="many2many_tags" colspan="4"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_security_tree">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Prodotti con modello sicurezza" editable="bottom" colors="blue:security_template_id!=False">
                    <field name="default_code" readonly="1"/>
                    <field name="name" readonly="1" />
                    <field name="uom_id" readonly="1" />

                    <!-- Security: -->
                    <field name="security_off" groups="mrp_safety_symbol.group_security_manager" />

                    <!-- Protection: -->
                    <field name="protection_eye_id" groups="mrp_safety_symbol.group_security_manager"/>
                    <field name="protection_skin_id" groups="mrp_safety_symbol.group_security_manager" />
                    <field name="protection_hand_id" groups="mrp_safety_symbol.group_security_manager" />
                    <field name="protection_air_id" groups="mrp_safety_symbol.group_security_manager" />
                    <field name="protection_body_id" groups="mrp_safety_symbol.group_security_manager" />
                    <field name="protection_foot_id" groups="mrp_safety_symbol.group_security_manager" />

                    <field name="symbol_ids" widget="many2many_tags" domain="[('mode', '=', 'danger'),('obsolete', '=', False)]"/>
                    <field name="adr_symbol_ids" widget="many2many_tags" domain="[('mode', '=', 'adr'),('obsolete', '=', False)]"/>

                    <!-- Terms: -->
                    <field name="term_h_ids" widget="many2many_tags" groups="mrp_safety_symbol.group_security_manager"/>
                    <field name="term_p_ids" widget="many2many_tags" groups="mrp_safety_symbol.group_security_manager"/>
                    <field name="term_dpi_ids" widget="many2many_tags" groups="mrp_safety_symbol.group_security_manager"/>
                    <field name="security_template_id" groups="mrp_safety_symbol.group_security_manager" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_security_top_tree">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Prodotti con modello sicurezza" colors="blue:security_template_id!=False">
                    <field name="default_code" />
                    <field name="name" />
                    <field name="uom_id" />

                    <!-- Security: -->
                    <field name="security_off" />
                    <field name="symbol_ids" widget="many2many_tags" />
                    <field name="adr_symbol_ids" widget="many2many_tags" />

                    <!-- Terms: -->
                    <field name="term_h_ids" widget="many2many_tags"/>
                    <field name="term_p_ids" widget="many2many_tags"/>
                    <field name="term_dpi_ids" widget="many2many_tags"/>
                    <field name="security_template_id" />
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_product_product_security">
            <field name="name">Prodotti e sicurezza</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_product_security_tree"/>
            <field name="search_view_id" ref="view_product_product_security_search"/>
            <field name="context">{'form_view_ref': 'mrp_safety_symbol.view_product_product_security_form'}</field>
            <field name="domain">[]</field>
        </record>
        <record model="ir.actions.act_window" id="action_product_product_security_top">
            <field name="name">Prodotti e sicurezza dett.</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_product_security_top_tree"/>
            <field name="search_view_id" ref="view_product_product_security_search"/>
            <field name="context">{'form_view_ref': 'mrp_safety_symbol.view_product_product_security_form'}</field>
            <field name="domain">[]</field>
        </record>

        <!--safety.symbol-->
        <record model="ir.ui.view" id="view_safety_symbol_tree">
            <field name="name">safety.symbol.tree</field>
            <field name="model">safety.symbol</field>
            <field name="arch" type="xml">
                <tree string="Symbol" colors="grey: obsolete == True; red:mode == 'danger'">
                    <field name="obsolete" />
                    <field name="code" />
                    <field name="name" />
                    <field name="mode" />
                    <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_safety_symbol_form">
            <field name="name">safety.symbol.form</field>
            <field name="model">safety.symbol</field>
            <field name="arch" type="xml">
                <form string="Symbol" version="7.0">
                    <sheet>
                        <group colspan="4" col="4">
                            <group colspan="2" col="2">
                                <field name="obsolete" />
                                <field name="code" />
                                <field name="name" />
                                <field name="mode" />
                                <separator string="note" colspan="2"/>
                                <field name="note" nolabel="1" colspan="2"/>
                            </group>
                            <group colspan="2" col="2">
                                <field name="image" widget="image" nolabel="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_safety_symbol">
            <field name="name">Safety symbol</field>
            <field name="res_model">safety.symbol</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_safety_symbol_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!--safety.H-->
        <record model="ir.ui.view" id="view_safety_H_tree">
            <field name="name">safety.h.tree</field>
            <field name="model">safety.h</field>
            <field name="arch" type="xml">
                <tree string="Termini H">
                    <field name="name" />
                    <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_safety_H_form">
            <field name="name">safety.h.form</field>
            <field name="model">safety.h</field>
            <field name="arch" type="xml">
                <form string="Termini H" version="7.0">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" />
                            <newline/>
                            <separator string="Note" colspan="4"/>
                            <field name="note" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_safety_H">
            <field name="name">Termini H</field>
            <field name="res_model">safety.h</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_safety_H_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!--safety.P-->
        <record model="ir.ui.view" id="view_safety_P_tree">
            <field name="name">safety.p.tree</field>
            <field name="model">safety.p</field>
            <field name="arch" type="xml">
                <tree string="Termini P">
                    <field name="name" />
                    <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_safety_P_form">
            <field name="name">safety.p.form</field>
            <field name="model">safety.p</field>
            <field name="arch" type="xml">
                <form string="Termini P" version="7.0">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" />
                            <newline/>
                            <separator string="Note" colspan="4"/>
                            <field name="note" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_safety_P">
            <field name="name">Termini P</field>
            <field name="res_model">safety.p</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_safety_P_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!--safety.DPI-->
        <record model="ir.ui.view" id="view_safety_DPI_tree">
            <field name="name">safety.dpi.tree</field>
            <field name="model">safety.dpi</field>
            <field name="arch" type="xml">
                <tree string="Termini DPI">
                    <field name="name" />
                    <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_safety_DPI_form">
            <field name="name">safety.dpi.form</field>
            <field name="model">safety.dpi</field>
            <field name="arch" type="xml">
                <form string="Termini DPI" version="7.0">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" />
                            <newline/>
                            <separator string="Note" colspan="4"/>
                            <field name="note" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_safety_DPI">
            <field name="name">Termini DPI</field>
            <field name="res_model">safety.dpi</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_safety_DPI_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!--safety.symbol.template-->
        <record model="ir.ui.view" id="view_safety_symbol_template_tree">
            <field name="name">safety.symbol.template.tree</field>
            <field name="model">safety.symbol.template</field>
            <field name="arch" type="xml">
                <tree string="Template">
                    <field name="name" />
                    <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_safety_symbol_template_form">
            <field name="name">safety.symbol.template.form</field>
            <field name="model">safety.symbol.template</field>
            <field name="arch" type="xml">
                <form string="Template" version="7.0">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" />
                            <newline/>
                            <field name="symbol_ids" widget="many2many_tags" colspan="4" domain="[('obsolete', '=', False)]"/>
                            <separator string="Note" colspan="4"/>
                            <field name="note" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_safety_symbol_template">
            <field name="name">Safety symbol template</field>
            <field name="res_model">safety.symbol.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_safety_symbol_template_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
            parent="mrp.menu_mrp_configuration"
            id="menu_safety_root"
            name="Safety"
            sequence="10"
            />
            <menuitem
                parent="menu_safety_root"
                id="menu_menu_safety_symbol"
                action="action_safety_symbol"
                sequence="10"/>
            <menuitem
                parent="menu_safety_root"
                id="menu_safety_H"
                action="action_safety_H"
                sequence="11"/>
            <menuitem
                parent="menu_safety_root"
                id="menu_safety_P"
                action="action_safety_P"
                sequence="12"/>
            <menuitem
                parent="menu_safety_root"
                id="menu_safety_DPI"
                action="action_safety_DPI"
                sequence="13"/>

            <menuitem
                parent="menu_safety_root"
                id="menu_menu_safety_symbol_template"
                action="action_safety_symbol_template"
                sequence="20"/>

            <menuitem
                parent="menu_safety_root"
                id="menu_menu_safety_symbol_product"
                action="action_product_product_security"
                sequence="30"/>
            <menuitem
                parent="menu_safety_root"
                id="menu_menu_safety_symbol_product_top"
                action="action_product_product_security_top"
                sequence="40"/>
    </data>
</openerp>

