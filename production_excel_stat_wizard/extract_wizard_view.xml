<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <!-- mrp.production.extract.stat.wizard -->
       <record id="mrp_production_extract_stat_wizard_view" model="ir.ui.view">
            <field name="name">Production report wizard</field>
            <field name="model">mrp.production.extract.stat.wizard</field>
            <field name="arch" type="xml">
                <form string="CRM Extract Wizard" version="7.0">
                   <header>
                       <button string="Cancel" special="cancel" />
                       <button name="action_report" string="Excel report" type="object" icon="gtk-print" class="oe_highlight" />
                   </header>                   
                   <group colspan="4" col="4">
                        <separator string="Period:" colspan="4"/>
                        <field name="from_date" />                   
                        <field name="to_date" />
                        
                        <separator string="Filter:" colspan="4"/>
                        <field name="product_id" />
                        <field name="material_id" />
                        
                   </group>
                </form>
            </field>
      </record>
      <record model="ir.actions.act_window" id="action_mrp_production_extract_stat_wizard">
          <field name="name">Production Extract wizard</field>
          <field name="res_model">mrp.production.extract.stat.wizard</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
          <field name="view_id" ref="mrp_production_extract_stat_wizard_view"/>
      </record>
      <menuitem 
          parent="mrp.menu_mrp_manufacturing" 
          id="menu_mrp_production_extract_stat_wizard" 
          action="action_mrp_production_extract_stat_wizard"
          sequence="90"
          />
          
    </data>
</openerp>
