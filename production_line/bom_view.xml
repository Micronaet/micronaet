<?xml version="1.0"?>
<openerp>
    <data>
        <!--Wizard:-->
        <!--bom.product.alternative.wizard-->
        <record model="ir.ui.view" id="view_bom_product_alternative_list_tree">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Alternative">
                    <field name="default_code" readonly="1"/>
                    <field name="name" readonly="1"/>
                    <field name="accounting_qty" readonly="1"/>
                    <button type="object"  name="select_this_product_button" string="Seleziona questo" icon="terp-stock_effects-object-colorize"/>
                </tree>
            </field>
        </record>

        <!-- Objects:-->
        <!-- Inherit: mrp.bom -->
        <record model="ir.ui.view" id="view_mrp_bom_button_alternative_form">
            <field name="name">mrp.bom.button.alternative.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_lines']//field[@name='product_id']" position="after">
                    <button type="object"
                            name="choose_material_alternative"
                            string="Seleziona prodotto alternativo"
                            icon="terp-stock_effects-object-colorize"
                            />
                </xpath>
            </field>
        </record>

        <!--bom.product.alternative-->
        <record model="ir.ui.view" id="view_bom_product_alternative_form">
            <field name="name">bom.product.alternative.form</field>
            <field name="model">bom.product.alternative</field>
            <field name="arch" type="xml">
                <form string="Alternative" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="group_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_bom_product_alternative_tree">
            <field name="name">bom.product.alternative.tree</field>
            <field name="model">bom.product.alternative</field>
            <field name="arch" type="xml">
                <tree string="Alternative" editable="bottom">
                    <field name="name" />
                    <field name="group_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_bom_product_alternative_search">
            <field name="name">bom.product.alternative.search</field>
            <field name="model">bom.product.alternative</field>
            <field name="arch" type="xml">
                <search string="Alternative" version="7.0">
                    <field name="name" />
                    <!--<field name="partner_id" filter_domain="[('partner_id','=',self)]"/>
                    <filter name="state_draft" string="Draft state" domain="[('state','=','draft')]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" context="{'group_by': 'state'}" />
                    </group>-->
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_bom_product_alternative">
            <field name="name">Alternative prodotti (DB)</field>
            <field name="res_model">bom.product.alternative</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_bom_product_alternative_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        <menuitem
            id="menu_bom_product_alternative"
            name="Alternative DB"
            parent="mrp.menu_mrp_bom_form_action"
            sequence="100" groups="group_production_admin,group_production_logistic,group_production_stock"
            action="action_bom_product_alternative"/>
   </data>
</openerp>
