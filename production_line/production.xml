<?xml version="1.0"?>
<openerp>
    <data>
    <!-- production.line *****************************-->
    <record model="ir.ui.view" id="view_production_line_search">
        <field name="name">Search Line of production</field>
        <field name="model">production.line</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Line of production">
                    <field name="code" />
                    <field name="name" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="view_production_line_tree">
        <field name="name">Line of production</field>
        <field name="model">production.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Line of production">
                    <field name="code" />
                    <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_production_line_form">
        <field name="name">Line of production</field>
        <field name="model">production.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Line of production">
                    <field name="code" />
                    <field name="name" />
                    <separator string="Note" colspan="4"/>
                    <field name="note" colspan="4" nolabel="1" />
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_view_production_line">
        <field name="name">Production lin e</field>
        <field name="res_model">production.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_production_line_search"/>
    </record>


    <!-- production.customer.order.line *****************************-->
    <record model="ir.ui.view" id="view_production_customer_order_line_search">
        <field name="name">Search OC line</field>
        <field name="model">production.customer.order.line</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="OC line">
                    <field name="date" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="product_id" />
                    <field name="deadline" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="view_production_customer_order_line_tree">
        <field name="name">OC line</field>
        <field name="model">production.customer.order.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="OC line">
                    <field name="date" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="product_id" />
                    <field name="quantity" sum="Total"  />
                    <field name="deadline" />
                    <field name="order_id" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_production_customer_order_line_form">
        <field name="name">OC line</field>
        <field name="model">production.customer.order.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="OC line">
                <group colspan="4" col="6">
                    <field name="sequence" />
                    <field name="name" />
                    <field name="order_id"  /> <!--readonly="1"-->
                    <field name="partner_id" />
                    <field name="product_id" />
                    <field name="quantity"  />
                </group>   
                <field name="date" />
                <field name="deadline" />
                
                <separator string="Note" colspan="4"/>
                <field name="note" colspan="4" nolabel="1" />
            </form>
        </field>
    </record>

     <record model="ir.ui.view" id="view_production_customer_order_line_graph">
        <field name="name">Grafico OC per product</field>
        <field name="model">production.customer.order.line</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Product production" type="bar">
                <field name="product_id"/>
                <field name="quantity" operator="+" />
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="view_production_customer_order_line_calendar">
        <field name="name">Calendar OC per product</field>
        <field name="model">production.customer.order.line</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar color="product_id" date_start="deadline" string="Product">
                <field name="name" />
                <field name="partner_id" />
                <field name="date" />
                <field name="quantity" />
            </calendar>
        </field>
    </record>-

    <record model="ir.actions.act_window" id="action_view_production_customer_order_line">
        <field name="name">OC line</field>
        <field name="res_model">production.customer.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph,calendar</field>
        <field name="search_view_id" ref="view_production_customer_order_line_search"/>
    </record>



    <!-- production.production.order *****************************-->
    <record model="ir.ui.view" id="view_production_production_order_search">
        <field name="name">Order for production</field>
        <field name="model">production.production.order</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Order for production">
                    <field name="name" />
                    <field name="date" />
                    <field name="duration" />
                    <field name="product_id" />
                    <field name="line_id" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="view_production_production_order_tree">
        <field name="name">Order for production</field>
        <field name="model">production.production.order</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Order for production">
                    <field name="name" />
                    <field name="date" />
                    <field name="duration" />
                    <field name="product_id" />
                    <field name="quantity" sum="Total"  />
                    <field name="line_id" />
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_production_production_order_form">
        <field name="name">Order for production</field>
        <field name="model">production.production.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Order for production">
                <field name="name" />
                <field name="quantity" />
                <field name="date" />
                <field name="duration" />
                <field name="product_id" />
                <field name="line_id" />

                <separator string="Order line" colspan="4"/>
                <field name="order_line_ids" colspan="4" nolabel="1" />

                <separator string="Note" colspan="4"/>
                <field name="note" colspan="4" nolabel="1" />
            </form>
        </field>
    </record>

     <record model="ir.ui.view" id="view_production_production_order_graph">
        <field name="name">Order for production</field>
        <field name="model">production.production.order</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Order for production" type="bar">
                <field name="line_id"/>
                <field name="quantity" operator="+" />
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="view_production_production_order_calendar">
        <field name="name">Order for production</field>
        <field name="model">production.production.order</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar color="line_id" date_start="date" date_delay="duration" string="Order for production" mode="day">
                <field name="product_id" />
                <field name="name" />
                <field name="date" />
                <field name="quantity" />
            </calendar>
        </field>
    </record>-

    <record model="ir.actions.act_window" id="action_view_production_production_order">
        <field name="name">Order for production</field>
        <field name="res_model">production.production.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph,calendar</field>
        <field name="search_view_id" ref="view_production_production_order_search" />
    </record>

    <record model="ir.actions.act_window" id="action_view_production_production_order_dashboard">
        <field name="name">Order for production today</field>
        <field name="res_model">production.production.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">calendar,tree,form,graph</field>
        <field name="search_view_id" ref="view_production_production_order_search"/>
    </record>


       <!-- Form Dashboard-->
       <record id="board_default_production_area" model="ir.ui.view">
            <field name="name">Dashboard production</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard">                
                    <vpaned>
                        <child1>
                                <action colspan="4" name="%(action_view_production_production_order_dashboard)d" string="Lines today" />
                        </child1>
                    </vpaned>                    
                </form>
            </field>
        </record>

        <!-- Action per chiamare le dashboard--> 
        <record id="action_board_default_production_area" model="ir.actions.act_window">
            <field name="name">Default dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="board_default_production_area"/>
        </record>


       <!-- Menu web_icon="images/menu.png" web_icon_hover="images/menu_hover.png" -->
    <menuitem name="Production Line" id="menu_base_production_production_root" sequence="5" action="action_board_default_production_area" /> 
       <menuitem name="Production" parent="menu_base_production_production_root" id="menu_base_production_root_production" sequence="10" />
          <menuitem name="OC line open" parent="menu_base_production_root_production" id="menuitem_production_customer_order_line" action="action_view_production_customer_order_line" sequence="10" />
          <menuitem name="Order of production" parent="menu_base_production_root_production" id="menuitem_production_customer_order_production" action="action_view_production_production_order" sequence="20" />

       <menuitem name="Configurazione" parent="menu_base_production_production_root" id="menu_base_production_root_configuration" sequence="90" />
          <menuitem name="Production line" parent="menu_base_production_root_configuration" id="configuration_production_line" sequence="10" action="action_view_production_line" />
  </data>
</openerp>
