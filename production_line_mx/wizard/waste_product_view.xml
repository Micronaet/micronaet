<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>    
       <!-- mrp.production.waste.wizard -->
       <record id="mrp_production_waste_wizard_view" model="ir.ui.view">
            <field name="name">Generate recovered product</field>
            <field name="model">mrp.production.waste.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate waste" version="7.0">        
                    <header>
                        <button name="action_confirm_move" string="Move in recovered product" type="object" confirm="All product remain will be moved in recovered ones's, confirm?"/>
                    </header>
                    
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="from_id" on_change="onchange_product_id(from_id)"/>
                            <field name="to_id" domain="[('id', '!=', from_id)]"/>
                            
                            <field name="force_price" />
                            <field name="remain_price" invisible="1" />
                            <field name="remain_qty" invisible="1" />
                            <newline/>
                            
                            <separator string="Product status detail:" colspan="4"/>
                            <field name="remain_detail" colspan="4" readonly="1" nolabel="1" widget="html"/>
                            
                        </group>
                    </sheet>        
                </form>                
            </field>
      </record>
      <record model="ir.actions.act_window" id="action_new_mrp_production_waste_wizard">
          <field name="name">Product in recovered</field>
          <field name="res_model">mrp.production.waste.wizard</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="view_id" ref="mrp_production_waste_wizard_view"/>
          <field name="context">{}</field>
          <field name="domain">[]</field>
          <field name="target">new</field>
      </record>
      
      <menuitem 
          parent="mrp.menu_mrp_manufacturing" 
          id="menu_mrp_production_waste_wizard" 
          action="action_new_mrp_production_waste_wizard"
          sequence="80"/>      
      
   </data>
</openerp>
