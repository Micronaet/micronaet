<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>    
       <!-- mrp.production.waste.wizard -->
       <record id="mrp_production_waste_wizard_view" model="ir.ui.view">
            <field name="name">Generate waste product</field>
            <field name="model">mrp.production.waste.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate waste" version="7.0">        
                    <header>
                        <button name="action_confirm_move" string="Move in waste" type="object" confirm="All product remain will be moved in waste ones's, confirm?"/>
                    </header>
                    
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="from_id" />
                            <field name="to_id" />
                            
                            <field name="remain_price" readonly="1" />
                            <field name="force_price" />
                            <field name="remain_qty" readonly="1" />
                            <newline/>
                            
                            <separator string="Product status detail:" colspan="4"/>
                            <field name="remain_detail" colspan="4" readonly="1" nolabel="1"/>
                            
                        </group>
                    </sheet>        
                </form>                
            </field>
      </record>
   </data>
</openerp>
