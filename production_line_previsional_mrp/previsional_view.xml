<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_mrp_production_previsional_tree">
            <field name="name">mrp.production.previsional.tree</field>
            <field name="model">mrp.production.previsional</field>
            <field name="arch" type="xml">
                <tree string="Previsional order" editable="bottom" colors="green:state=='used'">        
                     <field name="production_date" />
                     <field name="product_id" />
                     <field name="bom_id" domain="[('product_id', '=', product_id)]"/>
                     <field name="qty" />
                     <field name="uom_id" />
                     <field name="state" />
                     <button name="wkf_used_2_draft" string="Restart" type="object" icon="gtk-refresh" attrs="{'invisible': [('state','=','draft')]}"/>
                     <button name="wkf_draft_2_used" string="Used" type="object" icon="gtk-apply" attrs="{'invisible': [('state','=','used')]}"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_mrp_production_previsional">
            <field name="name">Previsional order</field>
            <field name="res_model">mrp.production.previsional</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mrp_production_previsional_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

       <!--Override:-->
       <!-- product.status.wizard -->
       <record id="product_status_wizard" model="ir.ui.view">
            <field name="name">Print product status</field>
            <field name="model">product.status.wizard</field>            
            <field name="type">form</field>
            <field name="inherit_id" ref="production_line.product_status_wizard"/>
            <field name="arch" type="xml">
                <field name="fake_ids" position="replace">
                    <field name="fake_ids" colspan="4" nolabel="1" readonly="1"/>
                </field>
            </field>
      </record>

      <menuitem 
          parent="production_line.menu_base_production_root_lavoration" 
          id="menu_mrp_production_previsional" 
          action="action_mrp_production_previsional"
          sequence="40"
          />
                
    </data>
</openerp>

