<?xml version="1.0"?>
<openerp>
    <data>
        <!--product.product.pedimento-->
        <record model="ir.ui.view" id="view_product_product_pedimento_form">
            <field name="name">product.product.pedimento.form</field>
            <field name="model">product.product.pedimento</field>
            <field name="arch" type="xml">
                <form string="Pedimento" version="7.0">        
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="product_id" />
                            <field name="name" />
                            <field name="product_qty" />                            
                        </group>
                    </sheet>        
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_pedimento_tree">
            <field name="name">product.product.pedimento.form</field>
            <field name="model">product.product.pedimento</field>
            <field name="arch" type="xml">
                <tree string="Pedimento" version="7.0" editable="bottom">
                    <field name="product_id" invisible="context.get('embedded', False)"/>
                    <field name="name" />
                    <field name="product_qty" sum="Total"/>                            
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_pedimento_search">
            <field name="name">product.product.pedimento.search</field>
            <field name="model">product.product.pedimento</field>
            <field name="arch" type="xml">
                <search string="Pedimento" version="7.0">        
                    <field name="name" />
                    <field name="product_id" filter_domain="[('product_id','=',self)]"/>
                    <group expand="0" string="Group By...">
                        <filter name="group_product" string="Product" context="{'group_by': 'product_id'}"/>
                    </group>                
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_product_product_pedimento">
            <field name="name">Pedimento</field>
            <field name="res_model">product.product.pedimento</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_product_pedimento_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        <menuitem 
            parent="product.menu_products" 
            id="menu_product_product_pedimento" 
            action="action_product_product_pedimento"
            sequence="10"
            />
        
        
        <record model="ir.ui.view" id="view_product_pedimento_form">
            <field name="name">product.product.pedimento.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[2]" position="after">
                    <page string="Pedimento">
                        <group col="4" colspan="4">
                            <separator string="Pedimento:" colspan="4"/>
                            <field name="pedimento_ids" context="{'embedded': True}" readonly="1" nolabel="1"/>
                        </group>    
                    </page>
                </xpath>                
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_product_material_pedimento_form">
            <field name="name">Material Pedimento</field>
            <field name="model">mrp.production.workcenter.line</field>
            <field name="inherit_id" ref="production_line.default_mrp_production_workcenter_line_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_material_ids']/tree/field[@name='product_id']" position="after">
                    <!--<field name="product_id" invisible="1"/>-->
                    <field name="pedimento_id"  domain="[('product_id', '=', product_id)]" />
                </xpath>
            </field>
        </record>
        
        <!--
        <record model="ir.ui.view" id="view_product_material_pedimento_form">
            <field name="name">Material Pedimento</field>
            <field name="model">mrp.production.workcenter.line</field>
            <field name="inherit_id" ref="production_line.default_mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_material_ids']/tree/field[@name='product_id']" position="after">
                    <field name="pedimento_id" domain="[('product_id', '=', product_id)]"/>                    
                </xpath>
            </field>
        </record>-->
    </data>
</openerp>

